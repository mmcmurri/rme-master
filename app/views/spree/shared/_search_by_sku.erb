<%= form_tag(shops_ajax_path, method: "get", id: "form_filters", remote: true) do %>
    <div class="search_by_sku input-group">
      <span class="input-group-btn">
        <%=button_tag(type: 'submit', class: "btn btn-default", remote: true) do %>
          <%=content_tag(:span, "", class: "glyphicon glyphicon-search") %>
        <% end %>
      </span>
      <input type="text" name="sku" class="form-control" placeholder="<%=Spree.t(:search_by_sku_placeholder)%>">
    </div><!-- /input-group -->
<% end %>

